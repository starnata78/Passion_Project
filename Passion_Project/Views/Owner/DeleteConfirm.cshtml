@model Passion_Project.Models.Owner

@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="go-link"><a href="/Owner/Details/@Model.OwnerID">Go back </a></div>

<h2 class="table-title">Are you sure you want to delete the owner?</h2>
<table class="table-bordered ownertable">
    <thead>
        <tr>
            <th>Owner ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><div>Id: @Model.OwnerID</div></td>
            <td><div>@Model.First_Name</div></td>
            <td><div>@Model.Last_Name</div></td>
            <td><div>@Model.Email</div></td>
        </tr>
    </tbody>
</table>

<form action="/Owner/Delete/@Model.OwnerID" method="POST">
    <div>
        <input type="submit" class="btn" style="background:#ff0000; color:#ffffff;" value="Confirm Delete" />
    </div>
</form>