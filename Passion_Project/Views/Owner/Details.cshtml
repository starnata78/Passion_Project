@model Passion_Project.Models.ViewModels.DetailsOwner
@{
    ViewBag.Title = "Details";
}

<div class="go-link"><a href="/Owner/list">Go back to list</a></div>

<div class="update-link"><a href="/Owner/Update/@Model.SelectedOwner.OwnerID">Update Owner</a></div>

<h2 class="table-title">Owner Details</h2>
<table class="table-bordered ownertable">
    <thead>
        <tr>
            <th>Owner ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><div>@Model.SelectedOwner.OwnerID</div></td>
            <td><div>@Model.SelectedOwner.First_Name</div></td>
            <td><div>@Model.SelectedOwner.Last_Name</div></td>
            <td><div>@Model.SelectedOwner.Email</div></td>
        </tr>
    </tbody>
</table>
    <div>
        <a href="/Owner/DeleteConfirm/@Model.SelectedOwner.OwnerID" class ="btn" style="background:#ff0000; color:#ffffff;">Delete this Owner</a>
    </div>


<div style ="margin-top:100px;">
    <h3>Policies related to this owner</h3>
    @foreach(var contract in Model.RelatedContracts)
    {
       <div><a href="/Contract/Details/@contract.ID">@contract.Policy</a></div>
    }
</div>




