@model Passion_Project.Models.Owner
@{
    ViewBag.Title = "Details";
}

<div class="go-link"><a href="/Owner/list">Go back to list</a></div>

<div class="update-link"><a href="/Owner/Update/@Model.OwnerID">Update Owner</a></div>

<h2 class="table-title">Owner Details</h2>
<table class="table-bordered ownertable">
    <thead>
        <tr>
            <th>Owner ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><div>@Model.OwnerID</div></td>
            <td><div>@Model.First_Name</div></td>
            <td><div>@Model.Last_Name</div></td>
            <td><div>@Model.Email</div></td>
        </tr>
    </tbody>
</table>
    <div>
        <a href="/Owner/DeleteConfirm/@Model.OwnerID" class ="btn" style="background:#ff0000; color:#ffffff;">Delete this Owner</a>
    </div>





