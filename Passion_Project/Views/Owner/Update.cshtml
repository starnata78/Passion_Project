@model Passion_Project.Models.Owner
@{
    ViewBag.Title = "Update Owner";
}

<div class="go-link"><a href="/Owner/List">Go back to list</a></div>
<h2 class="table-title">Update Owner</h2>
<form action="/Owner/Edit/@Model.OwnerID" method="POST">
    <div>
        <label>First Name:</label> <input type="text" name="First_Name" value="@Model.First_Name" />
    </div>
    <div>
        <label>Last Name:</label> <input type="text" name="Last_Name" value="@Model.Last_Name" />
    </div>
    <div>
        <label>Owner ID:</label> <input type="number" name="OwnerID" value="@Model.OwnerID" />
    </div>
    <div>
        <label>Email:</label> <input type="text" name="Email" value="@Model.Email" />
    </div>
    <div>
        <button class="btn" style="background:#ff0000; color:#ffffff;" name="Update Owner">Update Owner</button>
    </div>

</form>