@model Passion_Project.Models.Insurer
@{
    ViewBag.Title = "DeleteConfirm";
}


<div class="go-link"><a href="/Insurer/Details/@Model.InsurerID">Go back </a></div>
<h2 class="table-title">Are you sure you want to delete this insurer?</h2>

<table class="table-bordered ownertable">
    <thead>
        <tr>
            <th>Insurer ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><div>@Model.InsurerID</div></td>
            <td><div>@Model.Name</div></td>
        </tr>
    </tbody>
</table>
<form action="/Insurer/Delete/@Model.InsurerID" method="POST">
    <div>
        <button class="btn" style="background:#ff0000; color:#ffffff;">Confirm Delete</button>
    </div>
</form>
