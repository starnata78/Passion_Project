@model Passion_Project.Models.Policy
@{
    ViewBag.Title = "Update Policy";
}


<div class="go-link"><a href="/Policy/List">Go back to list</a></div>
<h2 class="table-title">Update Policy</h2>

<form action="/Policy/Edit/@Model.PolicyID" method="POST">
    <div>
        <label>Policy ID:</label> <input type="number" name="PolicyID" value="@Model.PolicyID" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="Name" value="@Model.Name" />
    </div>
    <div>
        <button class="btn" style="background:#ff0000; color:#ffffff;" name="Update Owner">Update Policy</button>
    </div>
</form>



