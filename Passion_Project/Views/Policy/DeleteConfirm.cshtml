@model Passion_Project.Models.Policy
@{
    ViewBag.Title = "DeleteConfirm";
}



<div class="go-link"><a href="/Policy/Details/@Model.PolicyID">Go back </a></div>
<h2 class="table-title">Are you sure you want to delete the policy?</h2>

<table class="table-bordered ownertable">
    <thead>
        <tr>
            <th>Policy ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><div>@Model.PolicyID</div></td>
            <td><div>@Model.Name</div></td>
        </tr>
    </tbody>
</table>
<form action="/Policy/Delete/@Model.PolicyID" method="POST">
    <div>
        <button class="btn" style="background:#ff0000; color:#ffffff;">Confirm Delete</button>
    </div>
</form>



